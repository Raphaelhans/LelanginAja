<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:padding="8dp"
        android:layout_margin="16dp"
        android:backgroundTint="#424242"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/button_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auction Report"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:gravity="center"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number of Successful Auctions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/tv_successful_auctions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Buyers"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/tv_top_buyers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buyer ID: 8 (1 bid)"
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Sellers"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/tv_top_sellers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seller ID: 14 (1 listing)"
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Popular Categories"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/tv_popular_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category-2 (1 listing)"
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Auctioned Cities"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#424242"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/tv_top_cities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Surabaya (1 auction)"
                android:textSize="16sp"
                android:textColor="#616161"
                android:paddingBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>