<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/history_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="3dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:strokeWidth="0dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:minHeight="72dp">

            <FrameLayout
                android:id="@+id/icon_container"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@color/material_dynamic_neutral80"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgItemHistory"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_history"
                    tools:src="@drawable/card" />
            </FrameLayout>

            <TextView
                android:id="@+id/itemHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:text="Transaction Item"
                android:textColor="#333333"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@id/priceHistory"
                app:layout_constraintStart_toEndOf="@id/icon_container"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Payment for Auction Item" />

            <TextView
                android:id="@+id/dateHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:maxLines="1"
                android:text="Date"
                android:textColor="#666666"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/itemHistory"
                app:layout_constraintStart_toEndOf="@id/icon_container"
                app:layout_constraintEnd_toEndOf="@id/itemHistory"
                tools:text="15 Juni 2024 | 14:30" />

            <TextView
                android:id="@+id/statusHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@color/white"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Status"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/dateHistory"
                app:layout_constraintStart_toStartOf="@id/dateHistory"
                tools:text="Success"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/priceHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="sans-serif-medium"
                android:gravity="end"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Rp 150.000" />

            <LinearLayout
                android:id="@+id/ratingContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/statusHistory"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rating Anda: "
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/design_default_color_primary"
                    android:text="5.0/5" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvReview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="13sp"
                android:textStyle="italic"
                android:text="Review Anda: 'Ini adalah review dari produk yang dibeli.'"
                android:maxLines="3"
                android:ellipsize="end"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/ratingContainer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/btnGiveRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beri Rating"
                android:layout_marginTop="8dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="12sp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvReview"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
