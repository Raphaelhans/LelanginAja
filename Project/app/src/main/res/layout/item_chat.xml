<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="chat"
            type="com.example.project.Chat" />
        <variable
            name="currentUsername"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/txtSenderId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{chat.id_seller}"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/txtTimestamp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/txtTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{chat.time != null ? chat.time.toDate().toString() : ``}"
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtSenderId"/>

        <TextView
            android:id="@+id/txtChat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_left"
            android:padding="8dp"
            android:text="@{chat.chat}"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/txtSenderId"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
