<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDF8"
    android:padding="16dp">


    <TextView
        android:id="@+id/topupTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Top Up History"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#2F2F2F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/topupSubTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="All top-up transactions will appear here"
        android:textSize="14sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/topupTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopUpHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/topupSubTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/rounded_white" />

</androidx.constraintlayout.widget.ConstraintLayout>
